#!/bin/sh

# A IQ-MENU wrapper script for system functions.

# For non-systemd init systems.
case "$(readlink -f /sbin/init)" in
*runit*) hib="sudo -A zzz" ;;
*openrc*)
    reb="sudo -A openrc-shutdown -r"
    shut="sudo -A openrc-shutdown -p 0"
    ;;
esac

cmds="\
🔒 lock		slock
🚪 leave IQ-WM	kill -TERM $(pgrep -u $USER "\bIQ-WM$")
♻ renew IQ-WM	kill -HUP $(pgrep -u $USER "\bIQ-WM$")
🐻 hibernate	slock ${hib:-systemctl suspend-then-hibernate -i}
🔃 reboot	${reb:-sudo -A reboot}
🖥 shutdown	${shut:-sudo -A shutdown -h now}
📺 display off 	 xset dpms force off"

choice="$(echo "$cmds" | cut -d'	' -f 1 | IQ-MENU)" || exit 1

$(echo "$cmds" | grep "^$choice	" | cut -d '	' -f2-)
